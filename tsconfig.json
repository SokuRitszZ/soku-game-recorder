{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "types": ["node"],
    "paths": { }
  },
  "include": ["src"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
